@model PJInventario.Models.TipoEquipo
@{
    ViewBag.Title = "TipoEquipoEdita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditarTipoEquipo", "TipoEquipo"))
{
    <div class="form-horizontal">
        <h2>Editar @Model.Nombre</h2>
        <hr />
        @Html.HiddenFor(model => model.IDTipoEquipo)

        <div class="form-group">
            <label class="control-label col-md-2">Descripción nuevo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @maxlength = "25" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" align="right">
                <input type="submit" value="Modificar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <div class="btn-group">
        <a class="nav-link" style="font-size: x-small; font: bold;" href="@Url.Action("TipoEquipoIndex", "TipoEquipo")">
            <img style="width:20px; height:20px;" src="~/Assets/Icons/icons8-return-48.png"> Regresar
        </a>
    </div>
</div>
